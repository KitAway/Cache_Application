ifndef XILINX_SDACCEL
$(error Environment variable XILINX_SDACCEL is required and should point to SDAccel install area)
endif

SDA_FLOW = hw_emu
HOST_SRCS = main.cpp  oclErrorCodes.cpp  oclHelper.cpp  soft.cpp
HOST_EXE_DIR=.
HOST_EXE = baseline
HOST_CFLAGS = -g -Wall -I${XILINX_SDACCEL}/runtime/include/1_2 	-I../../common/
HOST_LFLAGS = -L${XILINX_SDACCEL}/runtime/lib/x86_64 -lxilinxopencl
#-llmx6.0

KERNEL_SRCS = kernel.cpp
KERNEL_NAME = smithwaterman
KERNEL_DEFS = -I../../cache
KERNEL_INCS = 
KERNEL_FLAGS = 
#set target device for XCLBIN
XDEVICE=xilinx:adm-pcie-7v3:1ddr:3.0
XDEVICE_REPO_PATH=
KEEP_TEMP=1
KERNEL_DEBUG=
XCLBIN_NAME=bin_$(KERNEL_NAME)
HOST_CFLAGS+=-DTARGET_DEVICE=\"${XDEVICE}\"
#BOARD_SETUP_FILE needs to point to setup.sh generated by xbinst command
BOARD_SETUP_FILE=setup.sh
CLCC_OPT += ${KERNEL_FLAGS} --report estimate --kernel $(KERNEL_NAME)
ifeq (${SDA_FLOW},cpu_emu)
    CLCC_OPT += -t sw_emu
    XCLBIN = ${XCLBIN_NAME}_cpu_emu.xclbin
else ifeq (${SDA_FLOW},hw_emu)
    CLCC_OPT += -t hw_emu
    XCLBIN = ${XCLBIN_NAME}_hw_emu.xclbin
else ifeq (${SDA_FLOW},hw)
    XCLBIN = ${XCLBIN_NAME}_hw.xclbin
    CLCC_OPT += -t hw
endif

HOST_ARGS =  -k ${XCLBIN}

include ../../common/common.mk
run:  xbin
	XCL_EMULATION_MODE=true  ~/WORKSPACE/SDAccel/smithwaterman/base/baseline/baseline ${HOST_ARGS}
